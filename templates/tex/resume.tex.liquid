%-------------------------------------------------------------------------------
% Fonts and Appearance
%-------------------------------------------------------------------------------
\defaultfontfeatures{Ligatures=TeX}

\setmainfont{Roboto Light}
\newfontfamily\robotolight{Roboto Light}
\newfontfamily\robotomedium{Roboto Medium}
\newfontfamily\robotobold{Roboto Bold}
\newfontfamily\palatino{Palatino Linotype}

\titleformat{\section}{\Large\bfseries\addfontfeature{LetterSpace=-1}}{\thesection}{0em}{#1\hrule\vspace{-10mm}}

\geometry{
  top=1in,
  inner=1in,
  outer=1in,
  bottom=1in
}

\setlist{noitemsep}
\renewcommand\labelitemi{\small $\bullet$}

%-------------------------------------------------------------------------------
% Fonts
%-------------------------------------------------------------------------------
\def\trim#1{\ignorespaces#1\unskip}

\newcommand{\itemlist}[2]{\noindent\makebox[\textwidth]{\trim{#1}\hfill \textbf{\trim{#2}}}}
\newcommand{\itemtitle}[2]{\noindent\makebox[\textwidth]{\textbf{\trim{#1}}\hfill \textbf{\trim{#2}}}}
\newcommand{\itemdetail}[2]{\noindent\makebox[\textwidth]{\trim{#1}\hfill \trim{#2}}}

%-------------------------------------------------------------------------------
% Resume
%-------------------------------------------------------------------------------
\begin{document}
{% assign b = resume.basics %}
{{ b.name }} \\
{{ b.label }} \\

Email: {{ b.email }} \\
Web: {{ b.website }} \\{% for profile in b.profiles %}
{{ profile.network }} : {{ profile.url }} \\{% endfor %}
Location : {{ b.location.city }}, {{ b.location.region }}, {{ b.location.countryCode }} \\

\section*{Technical Skills}
{% for s in resume.skills %}
\itemlist{ {{ s.name }}: }{ {{ s.keywords | join: ', '}} }{% endfor %}

\section*{Summary}

{{ resume.basics.summary }}

\section*{Education}
{% for e in resume.education %}
\itemtitle{ {{ e.institution }} }{ {{ e.area }} }
\itemdetail{ {{ e.studyType }} }{ {{ e.startDate | date: '%b %Y' }} --- {{ e.endDate | date: '%b %Y' }} }
{% endfor %}
\section*{Experience}
{% for w in resume.work %}
\itemtitle{ {{ w.company }} }{ {{ w.summary }} }
\itemdetail{ {{ w.position }} }{ {{ w.startDate | date: '%b %Y' }} --- {{ w.endDate | date: '%b %Y' }} }
\begin{itemize}{% for highlight in w.highlights %}
  \item {{ highlight }}{% endfor %}
\end{itemize}
{% endfor %}

\section*{Awards, Scholarships, \& Achievements}
{% for a in resume.awards %}
\itemtitle{ {{ a.title }} }{ {{ a.awarder }} }
\itemdetail{ {{ a.summary }} }{ {{ a.date | date: '%b %Y' }} }
{% endfor %}

\section*{Interests}
{% for i in resume.interests %}
\textbf{\trim{ {{ i.name }}: }} {{ i.keywords | join: ', ' }} \\{% endfor %}

\end{document}
